<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Receiver Performance</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .carousel-item img {
            object-fit: contain; /* Make images fit without stretching */
            height: 80vh; /* Adjust height as needed */
            width: 100%; /* Ensure full width */
            max-height: 1080px; /* Set a max height for the images */
        }

        .carousel-control-prev, .carousel-control-next {
            filter: invert(100%); /* This makes the controls white */
            font-size: 24px; /* Increase size of the icons */
        }

        .carousel-caption {
            color: black; /* Change caption text to black */
        }

        /* Crossfade effect */
        .carousel-item {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            opacity: 0;
            transition: opacity 2.0s ease-in-out;
        }
        .carousel-item.active {
            opacity: 1;
            position: relative; /* Required for the active item to be positioned above the others */
        }
    </style>
</head>
<body>

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100" src="receiver_performance.png" alt="First slide">
        <div class="carousel-caption d-none d-md-block">
                <h5>Current Period</h5>
        </div>
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="receiver_performance_previous.png" alt="Second slide">
        <div class="carousel-caption d-none d-md-block">
                <h5>Previous Period</h5>
        </div>
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<!-- Bootstrap and jQuery -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>

<script>
// Handle the crossfade transition
$('#carouselExampleIndicators').on('slide.bs.carousel', function (e) {
    var $carousel = $(e.currentTarget);
    var $carouselInner = $carousel.find('.carousel-inner');
    var $items = $carouselInner.find('.carousel-item');
    var $activeItem = $carouselInner.find('.carousel-item.active');
    var $nextItem = $(e.relatedTarget);

    $items.css('opacity', 0); // Set all items to transparent

    $nextItem.addClass('active').css('opacity', 0); // Set the next item to active but transparent

    setTimeout(function () {
        $activeItem.removeClass('active').css('opacity', 0); // Set the previous item to transparent and inactive
        $nextItem.css('opacity', 1); // Set the next item to fully visible
    }, 0);
});
</script>

</body>
</html>
